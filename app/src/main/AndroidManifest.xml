<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.courtlife">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CourtLife">
        <activity android:name=".HomeActivity"></activity>
        <activity android:name=".RegistrationAsUser" />
        <activity android:name=".RegistrationAsAdvocate" />
        <activity android:name=".LoginAsUser" />
        <activity android:name=".LoginAsAdvocate" />
        <activity android:name=".CauseListActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>